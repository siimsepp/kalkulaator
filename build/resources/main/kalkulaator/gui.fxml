<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kalkulaator.Controller">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0">
            <HBox prefHeight="60.0" prefWidth="800.0">
                <children>
                    <TextField fx:id="sisend" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" prefWidth="615.0">
                        <font>
                            <Font name="Fira Code Bold" size="21.0" />
                        </font>
                        <padding>
                            <Insets bottom="12.0" left="10.0" top="10.0" />
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="nupp" minHeight="60.0" minWidth="155.0" mnemonicParsing="false" onAction="#processUserInput" text="Arvuta" textFill="#d71b1b">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                        </HBox.margin>
                        <font>
                            <Font name="Fira Code Retina" size="21.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
            <HBox prefHeight="60.0" prefWidth="800.0">
                <children>
                    <Label fx:id="tulemus" prefHeight="60.0" prefWidth="670.0" textFill="#324bc9">
                        <font>
                            <Font name="System Bold" size="21.0" />
                        </font>
                        <padding>
                            <Insets bottom="12.0" left="20.0" right="20.0" top="10.0" />
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Label>
                    <Button fx:id="puhasta" minHeight="60.0" minWidth="100.0" mnemonicParsing="false" onAction="#processAC" text="Puhasta" textFill="#951b9e">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                        </HBox.margin>
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="80.0" prefHeight="60.0" prefWidth="800.0">
                <children>
                    <Button fx:id="prime" minHeight="60.0" minWidth="100.0" mnemonicParsing="false" onAction="#processPrime" text="Algarv" textFill="#338a4e">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Button>
               <Button fx:id="weekday" layoutX="15.0" layoutY="15.0" minHeight="60.0" minWidth="100.0" mnemonicParsing="false" onAction="#processWeekday" text="Nädalapäev" textFill="#338a4e">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <HBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
               </Button>
                </children>
            </HBox>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </VBox>


    </children>
</AnchorPane>
